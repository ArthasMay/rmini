{
  "parser": "babel-eslint",
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "prettier", "prettier/@typescript-eslint", "prettier/standard"],
  "rules": {
    "no-constant-condition": 0,
    "no-console": [
      1,
      {
        "allow": ["error"]
      }
    ]
  }
}
